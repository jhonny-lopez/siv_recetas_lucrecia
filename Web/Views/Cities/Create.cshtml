@model Web.Models.Cities.CreateCityViewModel

<h1>@Resources.Cities.CitiesResources.NewCity</h1>

<form action="/Cities/Create" method="post">
    <div class="form-row">
        <div class="form-group col-sm-6">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", required="", maxlength=20 })
        </div>
        <div class="form-group col-sm-6">
            @Html.LabelFor(model => model.StateId)
            @Html.DropDownListFor(model => model.StateId, Model.StatesList, Resources.General.GeneralResources.Select, new { @class = "form-control ", required = "required" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">@Resources.General.GeneralResources.Save</button>
</form>