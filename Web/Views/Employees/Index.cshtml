@model Web.Models.Employees.IndexViewModel

<h1>Empleados</h1>

<a href="@Url.Action("Create")" class="btn btn-primary">Agregar empleado</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                Nombre
            </td>
            <td>
                Apellido
            </td>
            <td>
                Correo electrónico
            </td>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model.Employees)
        {
        <tr>
            <td>
                @employee.FirstName
            </td>
            <td>
                @employee.LastName
            </td>
            <td>
                @employee.EmailAddress
            </td>
        </tr>
        }
    </tbody>
</table>